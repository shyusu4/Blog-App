<div class="new-post">
  <h1>Create New Post</h1>
    <%= form_with model: @posts do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div> 
    <div>
        <%= form.label :text %>
        <%= form.text_field :text %>
    </div>
    <div>
        <%= form.submit "Create Post" %>
    </div>
    <% end %>
</div>
<h1>Blog App</h1>
<div class="users-container">
    <% @users.each do |user| %>
        <div class="user-card">
            <img class="user-img" src=<%= user.photo %> alt=<%= user.name %>>
            <div class="user-card__content">
                <a class="username" href="users/<%= user.id %>"><%= user.name %></a>
                <div class="postscount">
                    <p>Number of posts: <%= user.posts.count %></p>
                </div>
            </div>
        </div>
    <% end %>
</div>